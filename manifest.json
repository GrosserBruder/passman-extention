{
  "name": "Passman",
  "description": "Менеджер паролей Passman",
  "version": "0.1",
  "manifest_version": 3,
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs",
    "activeTab"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "action": {
    "default_icon": {
      "16": "/images/logo_16.png",
      "32": "/images/logo_32.png",
      "48": "/images/logo_48.png",
      "128": "/images/logo_128.png",
      "192": "/images/logo_192.png"
    },
    "default_popup": "popup/popup.html",
    "default_title": "Passman"
  },
  "icons": {
    "16": "/images/logo_16.png",
    "32": "/images/logo_32.png",
    "48": "/images/logo_48.png",
    "128": "/images/logo_128.png",
    "192": "/images/logo_192.png"
  },
  "options_ui": {
    "page": "/option/option.html",
    "open_in_tab": true
  },
  "options_page": "/option/option.html",
  "background": {
    "service_worker": "/background/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "/contentScripts/pasteToForm.js"
      ]
    }
  ]
}